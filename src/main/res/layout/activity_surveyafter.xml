<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feedback_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE6E0"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="测试分"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="风险承受能力"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/survey_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"/>

            <!--设置对应的字体-->
            <TextView
                android:id="@+id/type_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="123"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="456"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="789"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/type_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="101112"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/type_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="131415"
                android:textSize="15dp"
                android:visibility="gone"/>
            <!--android:text="@{(viewModel.infoMo.getRiskScore() >= 30) || (viewModel.infoMo.getRiskScore() <= 47) ? View.VISIBLE :View.GONE}"-->
        </LinearLayout>

        <include
            android:id="@+id/color_progressbar"
            layout="@layout/color_progressbar"/>

        <TextView
            android:id="@+id/type_introduce_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#e7f5e9"
            android:padding="10dp"
            android:text="111111111111"
            android:textSize="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/type_introduce_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#e7f5e9"
            android:padding="10dp"
            android:text="22222222222222222222"
            android:textSize="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/type_introduce_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#e7f5e9"
            android:padding="10dp"
            android:text="33333333333333333"
            android:textSize="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/type_introduce_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#e7f5e9"
            android:padding="10dp"
            android:text="444444444444444444444444444"
            android:textSize="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/type_introduce_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#e7f5e9"
            android:padding="10dp"
            android:text="55555555555555555555555555"
            android:textSize="15dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
